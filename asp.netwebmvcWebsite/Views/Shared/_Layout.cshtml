<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body class="p-0 m-0 border-0 bd-example m-0 border-0" >
    <div class="navbar navbar-inverse navbar-fixed-top" style="margin:0px;">
        <div class="container-fluid">     @*  container">    d-flex flex-row mb-3" *@
            <h2 class="pt-20">
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </h2>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Logout", "Index", "Home", new { @class = "btn-danger", @id = "btn" })
                    </li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li class="nav-item"> @Html.ActionLink("Privacy", "Privacy", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class=" object-fit-cover">
        @*container1  style="margin:0px; padding:0px;"  body-content *@
        @RenderBody()
        <div class="footer" style="margin:0px;">
            <footer>
                <p>&copy; @DateTime.Now.ToShortDateString() - My ASP.NET Application</p>
            </footer>
        </div>

    </div>
    @*  <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
