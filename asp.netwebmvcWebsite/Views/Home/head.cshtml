            <li><a href="" class="active"> 
                @if (Session["email"] != null){<span> Email: @Session["email"] </span> }
                else{<span></span>}
            </a></li>
            <li> @Html.ActionLink("Logout", "Logout", "Home", new { @class = "btn-danger", @id = "logoutbtn" })</li>
           
        </ul>
        <div class="menu-icon">
            <i class="fa-solid fa-bars" onclick="toggleMenu()"></i>
        </div>
    </nav>


    <script>
        let menuList = document.getElementById("menuList")
        menuList.style.maxHeight = "0px";

        function toggleMenu(){
            if(menuList.style.maxHeight == "0px")
            {
                menuList.style.maxHeight = "300px";
            }
            else{
                menuList.style.maxHeight = "0px";
            }
        }

    </script>
