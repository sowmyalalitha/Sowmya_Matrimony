<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<div class="welcomecontainer">
    <div class="image">
        <img src="../Images/marriageimage.jpg" ID="Image1" alt="sampleimg" Class="rounded float-start" />
    </div>
    <div class="container">
        <div class="heading">
            <h3>
                <i>
                    <b>
                        @Html.Label("Sowmya Matrimony")
                    </b>
                </i>
            </h3>
        </div>
        <p>Make a perfect match</p> <br>
        @Html.Label("New User :", null, new { style = "Color:black;Fontsize:14px;" })
        @Html.ActionLink("Register", "Registration", "Home", null, new { @class = "btn btn-primary" })
        <br><br>
        @Html.Label("Already Registered :", null, new { style = "Color:black;Fontsize:14px;" })
        @Html.ActionLink("Login", "LoginPage", "Home", null, new { @class = "btn btn-primary" })

    </div>
</div>

<style>
    .welcomecontainer {
        height: auto;
        width: auto;
        display: flex;
        flex-direction: row;
        background-color: rgb(202, 194, 188);
    }

        .welcomecontainer .image {
            width: 100%;
            height: 100vh;
            min-width: 50%; /* Restrict the size */
            flex: 1;
            justify-content: center; /* Align the image to the right */
            align-items: center; /* Center the image vertically */
            border-radius: 0% 50% 50% 00%; /* right curve*/
            border: 5px solid darkblue;
            background-color: rgb(87, 84, 82);
            position: relative;
            overflow: hidden;
            /* padding: 2px; */
        }

    img {
        width: 100%; /* Make image responsive */
        height: 100%;
        justify-content: center; /* Align the image to the right */
        align-items: center; /* Center the image vertically */
        border-radius: 0% 50% 50% 00%; /* right curve*/
        object-fit: fill;
        top: 2px;
        left: 2px;
        bottom: 2px;
        position: relative;
        border-radius: 0% 50% 50% 00%; /* right curve*/
        overflow: hidden;
        border: 5px solid black;
    }

    .container {
        text-align: center;
        justify-content: center;
        align-items: center;
        color: white;
        padding-top: 120px;
    }

    .heading {
        color: darkblue
    }

    button {
        color: white;
        background-color: darkblue;
        border: 2px solid orange;
    }

        button:hover {
            color: darkblue;
            background-color: whitesmoke;
            border: 2px solid rgb(212, 43, 43);
        }
</style>

