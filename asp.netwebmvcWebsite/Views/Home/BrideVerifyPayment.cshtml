@model  asp.netwebmvcWebsite.Models.PaymentModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BrideVerifyPayment</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
</head>
<body>
    <div>
        @using (@Html.BeginForm("BrideVerifyPayment", "Home", FormMethod.Post))
         {
            if(@TempData["BridePaymentId"] != null)
             {
        <div class="alert alert-success">
            <h4> Payment Id: </h4> @TempData["BridePaymentId"]  <br>
            <p> Note: This payment is Valid 2 Months</p>  <br>
            <p>Impotant to click on Conform</p> <br>
            <button type="submit" class="close" data-dismiss="alert">Conform</button>
        </div> 
             }

            <div id="result" style="background-color:blue;color:white;" class="alert alert-success ">
               
                payment Result<br>

                @if (TempData["err"] == "PaymentId is null.")
                {<p style="color:Red;">Error: @TempData["err"]</p> }
              else
              {
                  if (TempData["BridePaymentStatusss"] == "Success" && TempData["GenderFemale"] == "Female")
                  {
                    <h3> payment Success to view Bride</h3><br>
                    <h4> Payment Id: </h4> @TempData["BridePaymentId"]

                    <button type="submit">Conform</button>
                  }
                 else if (TempData["BridePaymentStatusss"] == "Failure")
                 {
                    <h2> payment Failure</h2> <br>
                    <h4> Payment Id: </h4> @TempData["BridePaymentId"]
                    <p>payment not successful</p>
                 }

              }

            </div>
        }
    </div>
</body>
</html>
